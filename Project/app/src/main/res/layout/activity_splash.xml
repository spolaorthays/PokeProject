<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3232ff"
    tools:context=".view.SplashActivity">

    <TextView
        android:id="@+id/initial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Iniciando sua Pokedex..."
        android:text="@string/initial_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="48sp"
        android:textAlignment="center"
        android:layout_above="@id/gif_splash"/>

    <ImageView
        android:id="@+id/gif_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/pokebola"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/author_text"
        android:text="@string/author_text"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_marginEnd="4dp"
        android:layout_below="@id/gif_splash"/>

</RelativeLayout>